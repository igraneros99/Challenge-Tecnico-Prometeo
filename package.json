{
  "name": "prometeo-technical-test",
  "version": "1.0.0",
  "description": "Automation QA Test with Playwright and Allure",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:allure": "npx playwright test --reporter=list,allure-playwright",
